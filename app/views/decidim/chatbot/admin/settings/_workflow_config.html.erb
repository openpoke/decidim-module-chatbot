<% if workflow_manifest&.configurable? %>
  <div class="card">
    <div class="card-divider">
      <h2 class="card-title" data-chatbot-settings-target="workflowHeading">
        <%= t("decidim.chatbot.admin.settings.form.configuration_for", workflow: workflow_display_name) %>
      </h2>
    </div>

    <div class="card-section">
      <%= render partial: workflow_manifest.settings_partial, locals: { form: form, setting_form: setting_form, config: config } %>
    </div>
  </div>
<% end %>
